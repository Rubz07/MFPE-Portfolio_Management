package com.pod4.dailymutualfundnav.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.pod4.dailymutualfundnav.exception.MutualfundNotFoundException;
import com.pod4.dailymutualfundnav.model.MutualFund;
import com.pod4.dailymutualfundnav.repository.MutualfundRepository;

@Service
public class MutualfundService {

	
	@Autowired
	private MutualfundRepository stockRepository;
	
	public List<MutualFund> findAll() throws MutualfundNotFoundException{
		List<MutualFund> stockList=stockRepository.findAll();
		if(stockList.isEmpty()) {
			throw new MutualfundNotFoundException("Stock is not available");
		}
		return stockList;
	}
	
	public MutualFund getStockDetail(String stockName) throws MutualfundNotFoundException {
		MutualFund stock=stockRepository.findByStockName(stockName);
		if(stock==null) {
			throw new MutualfundNotFoundException("Stock is not available");
		}
		return stock;
	}
}
